{
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production concurrently \"eleventy\" \"postcss src/styles.css -o _site/styles.css\"",
    "clean": "rimraf _site",
    "start": "concurrently -k \"postcss -w src/styles.css -o _site/styles.css\" \"eleventy --serve\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.2.6",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.3.2",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.4"
  }
}
